<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp"
    android:background="@drawable/shape_album_item_bg">

     <com.example.himalaya.views.RoundRectImageView
         android:id="@+id/album_cover"
         android:layout_width="68dp"
         android:scaleType="fitXY"
         android:layout_centerVertical="true"
         android:layout_height="65dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/album_cover"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        
        <TextView
            android:layout_width="match_parent"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/album_title_tv"
            android:layout_marginTop="5dp"
            android:text="拿破仑·希尔《成功学全书》"
            android:textSize="16sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:id="@+id/album_description_tv"
            android:text="为你开启成功之路，给你指向未来！一起行动.."
            android:textColor="#ff848484"
            android:textSize="12sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="6dp"
                    android:src="@mipmap/play_info_icon"
                    android:layout_height="6dp" />
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="234.5万"
                    android:id="@+id/album_play_count"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff848484"
                    android:textSize="7sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="6dp"
                    android:src="@mipmap/ic_sound"
                    android:layout_height="6dp" />
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="23集"
                    android:id="@+id/album_contend_size"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff848484"
                    android:textSize="7sp"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    
</RelativeLayout>